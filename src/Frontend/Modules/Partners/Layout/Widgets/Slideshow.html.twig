{#
  variables that are available:
  - {partners}
#}
<section id="blogRecentCommentsWidget" class="mod">
  <div class="inner">
    {% if partners %}
      <ul class="bxslider">
        {% for partner in partners %}
          <li>
            <a href="{{ partner.url }}">
              <img src="{{ partner.image.webPath('source') }}" alt="{{ partner.name }}" />
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</section>
